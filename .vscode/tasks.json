{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build & Flash (LM4F120, single file)",
            "type": "shell",
            "command": "arm-none-eabi-gcc",
            "args": [
                "-DPART_TM4C123GH6PM",
                "-DTARGET_IS_TM4C123_RA1",
                "-mcpu=cortex-m4",
                "-mthumb",
                "-mfloat-abi=hard",
                "-mfpu=fpv4-sp-d16",
                "-Os",
                "-ffunction-sections",
                "-fdata-sections",
                "-nostdlib",
                "-T",
                "/home/brave/ti/tivaware/common/tiva.ld",
                "-Wl,--gc-sections",
                "-Wl,-Map=${fileDirname}/${fileBasenameNoExtension}.map",
                "-g",
                "-Wall",
                "-Wextra",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.elf",
                "${file}",
                "/home/brave/ti/tivaware/common/startup_gcc.c",
                "/home/brave/ti/common/memcpy.c",
                "-I",
                "/home/brave/ti/tivaware",
                "-I",
                "/home/brave/ti/tivaware/inc",
                "-L",
                "/home/brave/ti/tivaware/driverlib/gcc",
                "-ldriver",
                "-lgcc",
                "&&",
                "arm-none-eabi-objcopy",
                "-O",
                "binary",
                "${fileDirname}/${fileBasenameNoExtension}.elf",
                "${fileDirname}/${fileBasenameNoExtension}.bin",
                "&&",
                "lm4flash",
                "${fileDirname}/${fileBasenameNoExtension}.bin",
                "&&",
                "rm",
                "${fileDirname}/*.elf",
                "${fileDirname}/*.bin",
                "${fileDirname}/*.map"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Build BlueLed (no flash)",
            "type": "shell",
            "command": "arm-none-eabi-gcc",
            "args": [
                "-DPART_TM4C123GH6PM",
                "-DTARGET_IS_TM4C123_RA1",
                "-mcpu=cortex-m4",
                "-mthumb",
                "-mfloat-abi=hard",
                "-mfpu=fpv4-sp-d16",
                "-Os",
                "-ffunction-sections",
                "-fdata-sections",
                "-nostdlib",
                "-T",
                "/home/brave/ti/tivaware/common/tiva.ld",
                "-Wl,--gc-sections",
                "-Wl,-Map=${workspaceFolder}/test/blue_led.map",
                "-g",
                "-Wall",
                "-Wextra",
                "-o",
                "${workspaceFolder}/test/blue_led.elf",
                "${workspaceFolder}/test/blue_led.c",
                "${workspaceFolder}/test/gpio.c",
                "/home/brave/ti/tivaware/common/startup_gcc.c",
                "/home/brave/ti/common/memcpy.c",
                "-I",
                "/home/brave/ti/tivaware",
                "-I",
                "/home/brave/ti/tivaware/inc",
                "-L",
                "/home/brave/ti/tivaware/driverlib/gcc",
                "-ldriver",
                "-lgcc",
                "&&",
                "arm-none-eabi-objcopy",
                "-O",
                "binary",
                "${workspaceFolder}/test/blue_led.elf",
                "${workspaceFolder}/test/blue_led.bin",
                "&&",
                "echo",
                "ssss!!!!!!!!!!",
                "${workspaceFolder}/test/blue_led.bin",
                "&&",
                "lm4flash",
                "${workspaceFolder}/test/blue_led.bin"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "type": "cppbuild",
            "label": "C/C++: arm-none-eabi-gcc сборка активного файла",
            "command": "/usr/bin/arm-none-eabi-gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Задача создана отладчиком."
        }
    ]
}